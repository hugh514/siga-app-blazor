@page "/professor/relatorios"
<PageTitle>Relatórios - Professores</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">Relatórios</h2>
    <a class="btn btn-outline-secondary" href="/professores">Voltar</a>
</div>

<div class="row g-4">
    <div class="col-md-6">
        <div class="card shadow-sm p-3">
            <h5>Listagem geral</h5>
            <p class="small text-muted">Gere uma listagem completa de professores (front-end estático).</p>
            <div class="mt-3 d-flex gap-2">
                <button class="btn btn-primary btn-sm">Exportar PDF</button>
                <button class="btn btn-outline-secondary btn-sm">Exportar CSV</button>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card shadow-sm p-3">
            <h5>Professores por curso</h5>
            <p class="small text-muted">Filtro por curso e disciplina para gerar relatório.</p>
            <div class="mt-3 d-flex gap-2">
                <select class="form-select w-50">
                    <option>Todos os cursos</option>
                </select>
                <button class="btn btn-primary btn-sm">Gerar</button>
            </div>
        </div>
    </div>
</div>