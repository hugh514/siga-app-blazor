@page "/calendario-academico/novo"

<PageTitle>Novo Calendário Acadêmico</PageTitle>

<div class="container-fluid px-4 py-4">
    <h3 class="fw-bold mb-4">Cadastrar Novo Calendário Acadêmico</h3>

    <div class="card shadow-sm p-4">
        <div class="mb-3">
            <label class="form-label fw-semibold">Ano *</label>
            <input type="number" class="form-control" value="@DateTime.Now.Year" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Nome *</label>
            <input type="text" class="form-control" placeholder="Ex: Calendário 2025" />
        </div>

        <div class="d-flex justify-content-end gap-2 mt-4">
            <a href="/calendarios" class="btn btn-outline-secondary">Cancelar</a>
            <button class="btn btn-primary">Salvar</button>
        </div>
    </div>
</div>
