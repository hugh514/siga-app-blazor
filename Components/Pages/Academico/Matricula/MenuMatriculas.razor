@page "/matricula"
<PageTitle>Matrículas</PageTitle>

<div class="container py-5">
    <!-- Header / Title -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="mb-0 fw-bold text-dark">Menu de Matrículas</h3>
            <small class="text-muted">Gerencie matrículas, relatórios e importações</small>
        </div>

        
    </div>

    <!-- Quick stats -->
    <div class="row g-3 mb-4">
        <div class="col-sm-6 col-md-4">
            <div class="card shadow-sm border-0 p-3 h-100">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <small class="text-muted">Total</small>
                        <h4 class="mb-0">@TotalMatrículas</h4>
                    </div>
                    <div class="fs-1 text-muted">
                        <i class="bi bi-people"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-md-4">
            <div class="card shadow-sm border-0 p-3 h-100">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <small class="text-muted">Ativas</small>
                        <h4 class="mb-0">@MatrículasAtivas</h4>
                    </div>
                    <div class="fs-1 text-muted">
                        <i class="bi bi-check-circle"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-12 col-md-4">
            <div class="card shadow-sm border-0 p-3 h-100">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <small class="text-muted">Pendentes</small>
                        <h4 class="mb-0">@MatrículasPendentes</h4>
                    </div>
                    <div class="fs-1 text-muted">
                        <i class="bi bi-exclamation-circle"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search / Filters / Actions -->
    <div class="card shadow-sm border-0 mb-4 p-3">
        <div class="row g-2 align-items-center">
            <div class="col-md-6">
                <div class="input-group">
                    <input class="form-control" placeholder="Pesquisar por nome, turma ou ID" @bind="SearchTerm" />
                    <button class="btn btn-outline-secondary" @onclick="OnSearch">Pesquisar</button>
                </div>
            </div>

            <div class="col-md-6 text-md-end">
                <div class="d-inline-flex gap-2">
                    <select class="form-select w-auto" @bind="SelectedFilter">
                        <option value="">Todos os status</option>
                        <option value="ativos">Ativos</option>
                        <option value="pendentes">Pendentes</option>
                    </select>

                    <a class="btn btn-outline-primary" href="#" role="button">Exportar CSV</a>
                    <a class="btn btn-outline-secondary" href="#" role="button">Importar</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Menu cards -->
    <div class="row g-4 justify-content-center">
        <!-- Card 1 -->
        <div class="col-sm-6 col-md-4">
            <a href="/matricula/aluno" class="text-decoration-none">
                <div class="card shadow-sm border-0 h-100 text-center p-4 hover-card">
                    <div class="mb-3 fs-1">
                        <i class="bi bi-person-plus"></i>
                    </div>
                    <h5 class="fw-normal text-dark">Cadastrar Matrícula</h5>
                    <p class="text-muted">Registrar um aluno em uma turma</p>
                </div>
            </a>
        </div>

        <!-- Card 2 -->
        <div class="col-sm-6 col-md-4">
            <a href="/matricula/lista" class="text-decoration-none">
                <div class="card shadow-sm border-0 h-100 text-center p-4 hover-card">
                    <div class="mb-3 fs-1">
                        <i class="bi bi-card-list"></i>
                    </div>
                    <h5 class="fw-normal text-dark">Listar Matrículas</h5>
                    <p class="text-muted">Visualizar todas as matrículas cadastradas</p>
                </div>
            </a>
        </div>

        <!-- Card 3 -->
        <div class="col-sm-6 col-md-4">
            <a href="buscar_matricula" class="text-decoration-none">
                <div class="card shadow-sm border-0 h-100 text-center p-4 hover-card">
                    <div class="mb-3 fs-1">
                        <i class="bi bi-search"></i>
                    </div>
                    <h5 class="fw-normal text-dark">Editar Matricula</h5>
                    <p class="text-muted">Seja tanto para Editar ou Excluir Matricula</p>
                </div>
            </a>
        </div>



        <!-- Card 5 -->
        <div class="col-sm-6 col-md-4">
            <a href="relatorios_matriculas" class="text-decoration-none">
                <div class="card shadow-sm border-0 h-100 text-center p-4 hover-card">
                    <div class="mb-3 fs-1">
                        <i class="bi bi-bar-chart"></i>
                    </div>
                    <h5 class="fw-normal text-dark">Relatórios</h5>
                    <p class="text-muted">Gerar relatórios por período ou turma</p>
                </div>
            </a>
        </div>

        <!-- Card 6 -->
        <div class="col-sm-6 col-md-4">
            <a href="import_export" class="text-decoration-none">
                <div class="card shadow-sm border-0 h-100 text-center p-4 hover-card">
                    <div class="mb-3 fs-1">
                        <i class="bi bi-upload"></i>
                    </div>
                    <h5 class="fw-normal text-dark">Importar / Exportar</h5>
                    <p class="text-muted">Importe ou exporte matrículas em CSV</p>
                </div>
            </a>
        </div>
    </div>


</div>

<style>
    .hover-card:hover {
        transform: translateY(-6px);
        transition: all .18s ease-in-out;
    }

    .hover-card {
        transition: all .18s ease-in-out;
    }
</style>

@code {
    // placeholders — substitua pelos valores/serviços reais
    private string SearchTerm { get; set; } = string.Empty;
    private string SelectedFilter { get; set; } = string.Empty;

    // demos — coloque a lógica para recuperar do back-end
    private int TotalMatrículas => 128;
    private int MatrículasAtivas => 102;
    private int MatrículasPendentes => 26;

    private void OnSearch()
    {
        // implementar pesquisa / navegação
        Console.WriteLine($"Procurando: {SearchTerm} (filtro: {SelectedFilter})");
    }
}
