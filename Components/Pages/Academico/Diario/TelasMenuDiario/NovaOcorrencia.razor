@page "/nova_ocorrencia"
<PageTitle>Nova Ocorrência</PageTitle>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold">Registrar Nova Ocorrência</h3>
    </div>

    <div class="card shadow-sm border-0 p-4">
        <form class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Aluno</label>
                <select class="form-select">
                    <option>Lucas Pereira</option>
                    <option>Maria Oliveira</option>
                    <option>João Lima</option>
                </select>
            </div>

            <div class="col-md-3">
                <label class="form-label">Data</label>
                <input type="date" class="form-control" />
            </div>

            <div class="col-md-3">
                <label class="form-label">Tipo</label>
                <select class="form-select">
                    <option>Leve</option>
                    <option>Média</option>
                    <option>Grave</option>
                </select>
            </div>

            <div class="col-12">
                <label class="form-label">Descrição</label>
                <textarea class="form-control" rows="4"></textarea>
            </div>

            <div class="col-12 text-end">
                <a href="/ocorrencias" class="btn btn-secondary me-2">Cancelar</a>
                <a href="/ocorrencias" class="btn btn-primary">Salvar Ocorrência</a>
            </div>
        </form>
    </div>
</div>
