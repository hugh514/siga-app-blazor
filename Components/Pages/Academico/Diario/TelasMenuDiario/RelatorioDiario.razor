@page "/relatorios"
<PageTitle>Relatório do Diário</PageTitle>

<div class="container py-5">
    <h3 class="mb-4 fw-normal text-dark text-center">Relatório do Diário - Emissão</h3>

    <div class="card shadow-sm border-0 p-4">
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Turma</label>
                <select class="form-select">
                    <option>3B Informática</option>
                    <option>2A Química</option>
                    <option>1C Administração</option>
                </select>
            </div>

            <div class="col-md-6">
                <label class="form-label">Período</label>
                <input type="month" class="form-control">
            </div>

            <div class="col-md-12 text-center mt-4">
                <button class="btn btn-success me-2">Gerar Relatório</button>
                <a href="menu_diario" class="btn btn-secondary">Voltar</a>
            </div>
        </div>

        <hr class="my-4">

        <h5 class="text-secondary mb-3">Prévia de Relatório</h5>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Data</th>
                    <th>Disciplina</th>
                    <th>Conteúdo</th>
                    <th>Presenças</th>
                    <th>Ocorrências</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>07/10/2025</td>
                    <td>Redes</td>
                    <td>Sub-redes IPv4</td>
                    <td>28/30</td>
                    <td>1</td>
                </tr>
                <tr>
                    <td>06/10/2025</td>
                    <td>Português</td>
                    <td>Crase e Concordância</td>
                    <td>29/30</td>
                    <td>0</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
