@page "/relatorios_diario"
<PageTitle>Relatórios do Diário</PageTitle>

<div class="container-fluid px-4 py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Relatórios</h2>
        <a class="btn btn-outline-secondary" href="/menu_diario">Voltar</a>
    </div>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="fw-semibold mb-2">Listagem geral</h5>
                    <p class="text-muted mb-4">Gere uma listagem completa do diário (front-end estático).</p>
                    <div class="d-flex gap-2">
                        <button class="btn btn-primary">Exportar PDF</button>
                        <button class="btn btn-outline-primary">Exportar CSV</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="fw-semibold mb-2">Relatório por turma</h5>
                    <p class="text-muted mb-4">Filtro por curso/turno/etapa para gerar relatório.</p>
                    <div class="d-flex gap-2">
                        <select class="form-select" style="max-width: 300px;">
                            <option>Todos os cursos</option>
                            <option>Informática</option>
                        </select>
                        <button class="btn btn-primary">Gerar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
