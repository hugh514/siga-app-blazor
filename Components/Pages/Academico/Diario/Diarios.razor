@page "/diarios"
@using System.Globalization

<PageTitle>Diários</PageTitle>

<div class="container-fluid px-4 py-4 gestao-diarios">
    <h3 class="fw-bold mb-4">
        Gestão de Diários
    </h3>

    <div class="alert alert-info shadow-sm small" role="alert">
        <i class="bi bi-info-circle me-1"></i>
        Selecione um diário da lista abaixo para gerenciar conteúdos, frequências e avaliações.
    </div>

    <div class="card shadow-sm p-3 mb-4 filtros-card">
        <div class="d-flex flex-wrap align-items-center gap-3">
            <span class="fw-semibold text-muted">Filtros:</span>
            <input type="text" class="form-control form-control-sm" placeholder="Professor" style="width: 200px;">
            <input type="text" class="form-control form-control-sm" placeholder="Turma" style="width: 200px;">
            <select class="form-select form-select-sm" style="width: 150px;">
                <option>Status</option>
                <option>Em andamento</option>
                <option>Finalizado</option>
            </select>
            <button class="btn btn-sm btn-primary">
                <i class="bi bi-search"></i> Buscar
            </button>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Professor</th>
                        <th>Turma</th>
                        <th>Período</th>
                        <th>Status</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Maria Santos</td>
                        <td>Educação Infantil A</td>
                        <td>2025</td>
                        <td><span class="badge bg-warning text-dark">Em andamento</span></td>
                        <td class="text-center">
                            <a class="btn btn-outline-primary btn-sm" href="/diarios/menu">
                                <i class="bi bi-box-arrow-in-right"></i> Abrir
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <td>João Almeida</td>
                        <td>Fundamental 2B</td>
                        <td>2025</td>
                        <td><span class="badge bg-success">Finalizado</span></td>
                        <td class="text-center">
                            <a class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-box-arrow-in-right"></i> Abrir
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
