@page "/estudantes"
@using SigaApp.Models.Estudante
@inject EstudanteDAO estudanteDAO

<PageTitle>Estudantes</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">Gestão de Estudantes</h2>
    <div class="d-flex gap-2">
        <a class="btn btn-primary" href="/estudantes/cadastrar_estudante">+ Novo estudante</a>
    </div>
</div>



    <div class="alert alert-info shadow-sm small" role="alert">
        <i class="bi bi-info-circle me-1"></i>
        Aqui você pode visualizar, editar e gerenciar os estudantes cadastrados.
    </div>

    <!-- Card de filtros -->
    <div class="card shadow-sm p-3 mb-4 filtros-card">
        <div class="d-flex flex-wrap align-items-center gap-3">
            <span class="fw-semibold text-muted">Filtros:</span>

            <input type="text" class="form-control form-control-sm"
                   @bind="filtroBusca"
                   placeholder="Nome, CPF, e-mail..."
                   style="width:220px;">

            <select class="form-select form-select-sm" style="width:160px;">
                <option value="">Todas as turmas</option>
            </select>

            <select class="form-select form-select-sm" style="width:130px;">
                <option value="">Status</option>
                <option>Ativo</option>
                <option>Inativo</option>
            </select>

            <button class="btn btn-sm btn-primary" @onclick="AplicarFiltro">
                <i class="bi bi-search"></i> Buscar
            </button>
        </div>
    </div>

    <!-- Lista dinâmica -->
    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Nome</th>
                        <th>Turma</th>
                        <th>Status</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>

                <tbody>
                    @if (estudantes == null)
                    {
                        <tr>
                            <td colspan="4" class="text-center py-4">
                                <div class="spinner-border"></div>
                            </td>
                        </tr>
                    }
                    else if (!estudantes.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center py-4 text-muted">
                                Nenhum estudante encontrado.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var est in estudantes)
                        {
                            <tr>
                                <td>@est.Nome</td>
                                <td> "Sem turma"</td>
                                <td>
                                    @if (est.Situacao == "cursando")
                                    {
                                        <span class="badge bg-success">Cursando</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Transferido</span>
                                    }
                                </td>

                                <td class="text-center">
                                    <a class="btn btn-outline-primary btn-sm" href="/estudantes/editar_estudante/@est.Id">
                                        Editar
                                    </a>

                                <a class="btn btn-outline-danger btn-sm" href="/estudantes/excluir_estudante/@est.Id">
                                        Excluir
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>

            </table>
        </div>
    </div>


@code {
    private List<Estudante>? estudantes;
    private string filtroBusca = "";

    protected override void OnInitialized()
    {
        estudantes = estudanteDAO.ListarTodos();
    }

    private void AplicarFiltro()
    {
        if (string.IsNullOrWhiteSpace(filtroBusca))
        {
            estudantes = estudanteDAO.ListarTodos();
        }
        else
        {
            var termo = filtroBusca.Trim().ToLower();

            estudantes = estudanteDAO.ListarTodos()
                .Where(e => e.Nome.ToLower().Contains(termo))
                .ToList();
        }
    }
}
