@page "/estudante_editar"
<PageTitle>Editar Estudante</PageTitle>

<div class="container-fluid py-5">
    <div class="card shadow-sm border-0 p-5 mx-auto" style="max-width: 900px;">
        <i class="bi bi-pencil-square text-primary" style="font-size: 3rem;"></i>
        <h4 class="mt-3 mb-4 text-dark">Editar Estudante</h4>
        <p class="text-muted mb-4">Atualize as informações do estudante abaixo.</p>

        <div class="text-start">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Nome do Aluno</label>
                    <input type="text" class="form-control" value="">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Data de Nascimento</label>
                    <input type="date" class="form-control" value="">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Idade</label>
                    <input type="number" class="form-control" value="">
                </div>

                <div class="col-md-4">
                    <label class="form-label">Cidade</label>
                    <input type="text" class="form-control" value="">
                </div>
                <div class="col-md-2">
                    <label class="form-label">UF</label>
                    <input type="text" class="form-control" value="">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Sexo</label>
                    <select class="form-select">
                        <option>Masculino</option>
                        <option>Feminino</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Telefone</label>
                    <input type="text" class="form-control" value="">
                </div>

                <div class="col-md-6">
                    <label class="form-label">Responsável</label>
                    <input type="text" class="form-control" value="">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Tipo de Responsável</label>
                    <select class="form-select">
                        <option>Pai</option>
                        <option>Mãe</option>
                        <option>Outro</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Endereço</label>
                    <input type="text" class="form-control" value="">
                </div>
                <div class="col-md-6">
                    <label class="form-label">Bairro</label>
                    <input type="text" class="form-control" value="">
                </div>

                <div class="col-md-3">
                    <label class="form-label">Turno</label>
                    <select class="form-select">
                        <option>Matutino</option>
                        <option>Vespertino</option>
                        <option>Noturno</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Situação</label>
                    <select class="form-select">
                        <option>Cursando</option>
                        <option>Transferido</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label">CPF</label>
                    <input type="text" class="form-control" value="">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Cartão SUS</label>
                    <input type="text" class="form-control" value="">
                </div>
            </div>
        </div>

        <div class="mt-4 text-center">
            <a href="/estudantes" class="btn btn-secondary me-2">Cancelar</a>
            <button class="btn btn-primary">Salvar Alterações</button>
        </div>
    </div>
</div>
