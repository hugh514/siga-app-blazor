@page "/visualizar_disciplina"
<PageTitle>Visualizar Disciplina</PageTitle>

<body class="bg-light">

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">

                <!-- Card de Visualização -->
                <div class="card shadow-lg">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Visualizar Disciplina</h5>
                    </div>
                    <div class="card-body">

                        <div class="mb-3 row">
                            <label class="col-sm-3 col-form-label">Nome</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" value="Matemática" readonly>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label class="col-sm-3 col-form-label">Carga Horária</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" value="80h" readonly>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label class="col-sm-3 col-form-label">Professor</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" value="João Silva" readonly>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label class="col-sm-3 col-form-label">Curso</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" value="Informática" readonly>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label class="col-sm-3 col-form-label">Série</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" value="3º Ano" readonly>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label class="col-sm-3 col-form-label">Competências</label>
                            <div class="col-sm-9">
                                <textarea class="form-control" rows="3" readonly>Resolver problemas matemáticos, desenvolver raciocínio lógico</textarea>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label class="col-sm-3 col-form-label">Métodos de Avaliação</label>
                            <div class="col-sm-9">
                                <textarea class="form-control" rows="2" readonly>Provas, trabalhos em grupo, participação em aula</textarea>
                            </div>
                        </div>

                        <div class="text-end">
                            <a href="/disciplina" class="btn btn-secondary">Voltar</a>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>

</body>
