@page "/turmas/vincular_professor"

@using SigaApp.Models.Turma
@inject TurmaDAO turmaDAO
@rendermode InteractiveServer

<div class="card mb-4 shadow-sm">
    <div class="card-body">
        <form class="row g-2 align-items-center" @onsubmit="Filtrar">

            <!-- Período letivo -->
            <div class="col-md-2">
                <select class="form-select" @bind="filtroPeriodoLetivo">
                    <option value="">Período letivo</option>
                    @foreach (var periodo in listaPeriodoLetivo)
                    {
                        <option value="@periodo">@periodo</option>
                    }
                </select>
            </div>

            <!-- Ano/Série -->
            <div class="col-md-2">
                <select class="form-select" @bind="filtroAno">
                    <option value="">Ano/Série</option>
                    <option value="1° ano">1º Ano</option>
                    <option value="2° ano">2º Ano</option>
                    <option value="3° ano">3º Ano</option>
                    <option value="4° ano">4º Ano</option>
                    <option value="5° ano">5º Ano</option>
                </select>
            </div>


            <!-- Botão -->
            <div class="col-md-1 d-grid">
                <button type="submit" class="btn btn-outline-primary">Filtrar</button>
            </div>
        </form>
    </div>
</div>

<!-- Resultado da filtragem -->
@if (listaFiltrada.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Status</th>
                <th>Ano</th>
                <th>Período Letivo</th>
                <th>Turno</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var turma in listaFiltrada)
            {
                <tr>
                    <td>@turma.Nome</td>
                    <td>@turma.Status</td>
                    <td>@turma.Ano</td>
                    <td>@turma.PeriodoLetivo</td>
                    <td>@turma.Turno</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">Nenhuma turma encontrada. Faça um filtro para visualizar resultados.</p>
}

@code {


    private string filtroAno = "";
    private string filtroPeriodoLetivo = "";

    private List<Turma> listaFiltrada = new();
    private List<string> listaPeriodoLetivo = new();

    protected override void OnInitialized()
    {
        var turmas = turmaDAO.ListarTodos();

        // Pegar apenas os períodos distintos
        listaPeriodoLetivo = turmas
            .Select(t => t.PeriodoLetivo.ToString())
            .Distinct()
            .ToList();

        // Exibir todas inicialmente
        listaFiltrada = turmas;
    }

    private void Filtrar()
    {
        listaFiltrada = turmaDAO.Filtrar(
            filtroAno,
            filtroPeriodoLetivo
        );
    }
}
