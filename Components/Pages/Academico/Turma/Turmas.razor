@page "/turmas"

<PageTitle>Turmas</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">Turmas</h2>
    <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary" href="/relatorios_turma">Relatórios</a>
        <a class="btn btn-primary" href="/cadastrar_turma">+ Nova turma</a>
    </div>
</div>

    <!-- Filtros -->
    <div class="row mb-3">
        <div class="col-md-5">
            <select class="form-select">
                <option selected>Filtrar por Disciplina</option>
                <option>Informática</option>
                <option>Administração</option>
                <option>Eletrotécnica</option>
            </select>
        </div>
        <div class="col-md-5">
            <select class="form-select">
                <option selected>Filtrar por Ano Letivo</option>
                <option>2023</option>
                <option>2024</option>
                <option>2025</option>
            </select>
        </div>
        <div class="col-md-2 d-grid">
            <button class="btn btn-outline-primary">Filtrar</button>
        </div>
    </div>

    <!-- Tabela -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Nome da Turma</th>
                        <th>Ano/Série</th>
                        <th>Disciplina</th>
                        <th>Professor Responsável</th>
                        <th>Turno</th>
                        <th>Qtd. Alunos</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Turma A</td>
                        <td>1º Ano</td>
                        <td>Informática</td>
                        <td>Prof. João</td>
                        <td>Matutino</td>
                        <td>32</td>
                        <td class="text-center">
                            <a class="btn btn-sm btn-outline-primary me-1" href="detalhes_turma">Detalhes</a>
                            <a class="btn btn-sm btn-outline-success me-1" href="editar_turma">Editar</a>
                            <a class="btn btn-sm btn-outline-danger" href="deletar_turma">Excluir</a>
                        </td>
                    </tr>
                    <tr>
                        <td>Turma B</td>
                        <td>2º Ano</td>
                        <td>Administração</td>
                        <td>Prof. Maria</td>
                        <td>Vespertino</td>
                        <td>28</td>
                        <td class="text-center">
                            <a class="btn btn-sm btn-outline-primary me-1" href="detalhes_turma">Detalhes</a>
                            <a class="btn btn-sm btn-outline-success me-1" href="editar_turma">Editar</a>
                            <a class="btn btn-sm btn-outline-danger" href="deletar_turma">Excluir</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

