@page "/turmas"
@using SigaApp.Models.Turma
@inject TurmaDAO turmaDAO;

@code {
    private List<Turma> turmas = new();

    protected override void OnInitialized()
    {
        turmas = turmaDAO.ListarTodos();
    }
}

<PageTitle>Turmas</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">Turmas</h2>
    <div class="d-flex gap-2">        
        <a class="btn btn-primary" href="/turmas/cadastrar_turma">+ Nova turma</a>
    </div>
</div>

<!-- Filtros (mantidos, porém ainda não implementados) -->
<div class="card mb-4 shadow-sm">
    <div class="card-body">
        <form class="row g-2 align-items-center">

            <div class="col-md-4">
                <input class="form-control"
                       placeholder="Pesquisar por nome da turma..." />
            </div>

            <div class="col-md-3">
                <select class="form-select">
                    <option value="">Todas as disciplinas</option>
                    <option>Informática</option>
                    <option>Administração</option>
                    <option>Eletrotécnica</option>
                </select>
            </div>

            <div class="col-md-3">
                <select class="form-select">
                    <option value="">Ano letivo</option>
                    <option>2023</option>
                    <option>2024</option>
                    <option>2025</option>
                </select>
            </div>

            <div class="col-md-1 d-grid">
                <button type="button" class="btn btn-outline-primary">Filtrar</button>
            </div>

        </form>
    </div>
</div>

<!-- LISTA DE TURMAS (totalmente dinâmica) -->
<div class="row g-4">

    @if (turmas.Count == 0)
    {
        <div class="text-center text-muted mt-4">
            <p>Nenhuma turma encontrada.</p>
        </div>
    }
    else
    {
        @foreach (var turma in turmas)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex gap-3">

                        <!-- Ícone padrão -->
                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center"
                             style="width:80px;height:80px;font-size:32px;">
                            <i class="bi bi-people-fill"></i>
                        </div>

                        <div class="flex-fill">

                            <div class="d-flex justify-content-between align-items-start">

                                <div>
                                    <!-- Nome da turma -->
                                    <h5 class="mb-1">@turma.Nome</h5>
                                    @* Periodo Letivo *@
                                    <small class="text-muted">
                                        Periodo letivo: @turma.PeriodoLetivo
                                    </small>
                                                                        
                                </div>

                                <!-- Badge de status (futuro, se precisar) -->
                                <span class="badge @(turma.Status.ToLower() == "ativo" ? "bg-success" : "bg-secondary")">@turma.Status.ToUpper()</span>
                            </div>

                            <!-- Detalhes da turma -->
                            <div class="mt-2 small text-muted">
                                <!-- Informação complementar (Ano) -->
                                <div><strong>Ano/Série:</strong> @turma.Ano</div>
                                <div><strong>Turno:</strong> @turma.Turno</div>
                                <div><strong>Capacidade:</strong> @turma.Capacidade alunos</div>
                            </div>

                            <!-- Ações -->
                            <div class="mt-3 d-flex gap-2">
                                <a class="btn btn-sm btn-outline-success" href="/turmas/editar_turma/@turma.Id">Editar</a>                                
                                <a class="btn btn-sm btn-outline-danger" href="/turmas/deletar_turma/@turma.Id">Excluir</a>
                                <a class="btn btn-sm btn-outline-primary" href="/detalhes_turma/@turma.Id">Detalhes</a>  
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        }
    }

</div>
