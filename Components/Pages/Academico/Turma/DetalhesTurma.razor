@page "/turmas/detalhes_turma/{Id:int}"
@page "/professores/detalhes_professor/{Id_Prof:int}/detalhes_turma/{Id:int}"

@using SigaApp.Models.Professor
@using SigaApp.Models.Turma
@using SigaApp.Models
@inject TurmaDAO turmaDAO
@inject ProfessorDAO professorDAO
@inject ProfessorTurmaDAO professorTurmaDAO
@inject NavigationManager NavManager

@rendermode InteractiveServer

<PageTitle>Detalhes da Turma</PageTitle>

<div class="container py-4">

    @if (isLoading)
    {
        <div class="d-flex justify-content-center align-items-center" style="height:200px;">
            <div class="spinner-border"></div>
        </div>
    }
    else
    {
        <div class="row g-4">

            <!-- Card com informações da turma -->
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body d-flex gap-4 align-items-center">

                        <!-- Ícone padrão -->
                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center"
                             style="width:80px;height:80px;font-size:32px;">
                            <i class="bi bi-people-fill"></i>
                        </div>

                        <div class="flex-fill">

                            <!-- Cabeçalho -->
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h3 class="mb-1">@turma.Nome</h3>                                   
                                </div>

                                <div class="text-end">
                                    <span class="badge @(turma.Status.ToLower() == "ativo" ? "bg-success" : "bg-secondary") fs-6">
                                        @turma.Status.ToUpper()
                                    </span>
                                </div>
                            </div>

                            <!-- Informações adicionais -->
                            <div class="mt-3 row">

                                <div class="col-md-4 mb-2">
                                    <strong>Ano:</strong>
                                    <div class="text-muted">@turma.Ano</div>
                                </div>

                                <div class="col-md-4 mb-2">
                                    <strong>Período Letivo:</strong>
                                    <div class="text-muted">@turma.PeriodoLetivo</div>
                                </div>

                                <div class="col-md-4 mb-2">
                                    <strong>Turno:</strong>
                                    <div class="text-muted">@turma.Turno</div>
                                </div>

                                <div class="col-md-4 mb-2">
                                    <strong>Capacidade Máxima:</strong>
                                    <div class="text-muted">@turma.Capacidade alunos</div>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <!-- Professores vinculados -->
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body">

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <h5 class="mb-0">Professores vinculados</h5>
                                <small class="text-muted">Lista de professores associados a esta turma</small>
                            </div>

                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" @bind="mostrarInativos" id="mostrarInativos" />
                                <label class="form-check-label" for="mostrarInativos">
                                    Mostrar professores inativos
                                </label>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Nome</th>
                                        <th>Disciplina</th>
                                        <th>Status</th>
                                        <th class="text-center" style="width:220px;">Ações</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @if (professores == null)
                                    {
                                        <tr>
                                            <td colspan="4" class="text-center py-4">
                                                <div class="spinner-border"></div>
                                            </td>
                                        </tr>
                                    }
                                    else
                                    {
                                        var list = GetProfessoresFiltrados();

                                        if (!list.Any())
                                        {
                                            <tr>
                                                <td colspan="4" class="text-center py-4 text-muted">
                                                    Nenhum professor encontrado.
                                                </td>
                                            </tr>
                                        }
                                        else
                                        {
                                            @foreach (var p in list)
                                            {
                                                <tr>
                                                    <td>@p.Professor?.Nome</td>
                                                    <td>@p.Professor?.Disciplina</td>

                                                    <td>
                                                        @if ((p.Professor?.Status ?? "ativo").ToLower() == "ativo")
                                                        {
                                                            <span class="badge bg-success">Ativo</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-secondary">Inativo</span>
                                                        }
                                                    </td>

                                                    <td class="text-center text-nowrap">

                                                        <a href="/turmas/detalhes_turma/@turma.Id/detalhes_professor/@p.Professor?.Id"
                                                           class="btn btn-outline-primary btn-sm me-2">
                                                            Ver professor
                                                        </a>

                                                        <button class="btn btn-outline-danger btn-sm"
                                                                @onclick="() => Desvincular(p.Vinculo.Id)">
                                                            Desvincular
                                                        </button>

                                                    </td>
                                                </tr>
                                            }
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    }
</div>

@code {
    [Parameter] public int Id { get; set; }
    [Parameter] public int Id_Prof { get; set; }

    private Turma turma = new();
    private List<ProfessorTurma> vinculos;
    private List<VinculoExibicao> professores;
    private bool isLoading = true;
    private bool _mostrarInativos = false;

    private bool mostrarInativos
    {
        get => _mostrarInativos;
        set
        {
            _mostrarInativos = value;
            StateHasChanged();
        }
    }

    private class VinculoExibicao
    {
        public ProfessorTurma Vinculo { get; set; }
        public Professor Professor { get; set; }
    }

    protected override void OnInitialized()
    {
        CarregarDados();
    }

    private void CarregarDados()
    {
        isLoading = true;

        turma = turmaDAO.BuscarPorId(Id) ?? new Turma();

        vinculos = professorTurmaDAO.ListarPorTurma(Id) ?? new List<ProfessorTurma>();

        professores = new();

        foreach (var v in vinculos)
        {
            Professor pr = null;

            if (v.Id_Professor_fk != null)
                pr = professorDAO.BuscarPorId(v.Id_Professor_fk.Value);

            professores.Add(new VinculoExibicao
            {
                Vinculo = v,
                Professor = pr
            });
        }

        isLoading = false;
    }

    private IEnumerable<VinculoExibicao> GetProfessoresFiltrados()
    {
        if (mostrarInativos)
            return professores;

        return professores.Where(x =>
            x.Professor != null &&
            (x.Professor.Status ?? "ativo").ToLower() == "ativo"
        );
    }

    private void Desvincular(int id_ptu)
    {
        if (id_ptu <= 0) return;

        professorTurmaDAO.Excluir(Id, id_ptu);

        CarregarDados();
    }
}
