@page "/configuracoes/tipos-avaliacao/novo"

<PageTitle>Novo Tipo de Avaliação</PageTitle>

<div class="container-fluid px-4 py-4">
    <h3 class="fw-bold mb-4">Cadastrar Novo Tipo de Avaliação</h3>

    <div class="card shadow-sm p-4">
        <div class="mb-3">
            <label class="form-label fw-semibold">Nome *</label>
            <input type="text" class="form-control" placeholder="Ex: Prova" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Peso *</label>
            <input type="number" class="form-control" placeholder="Ex: 2.0" />
        </div>

        <div class="d-flex justify-content-end mt-4 gap-2">
            <a href="/configuracoes/tipos-avaliacao" class="btn btn-outline-secondary">Cancelar</a>
            <button class="btn btn-primary">Salvar</button>
        </div>
    </div>
</div>
