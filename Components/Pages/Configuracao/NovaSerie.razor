@page "/configuracoes/series-customizadas/nova"

<PageTitle>Nova Série</PageTitle>

<div class="container-fluid px-4 py-4">
    <h3 class="fw-bold mb-4">Cadastrar Nova Série</h3>

    <div class="card shadow-sm p-4">
        <div class="mb-3">
            <label class="form-label fw-semibold">Nível de Escolaridade *</label>
            <select class="form-select">
                <option>Selecione...</option>
                <option>Educação Infantil</option>
                <option>Ensino Fundamental</option>
                <option>Ensino Médio</option>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Nome da Série *</label>
            <input type="text" class="form-control" placeholder="Ex: 2º Ano B" />
        </div>

        <div class="d-flex justify-content-end mt-4 gap-2">
            <a href="/configuracoes/series-customizadas" class="btn btn-outline-secondary">Cancelar</a>
            <button class="btn btn-primary">Salvar</button>
        </div>
    </div>
</div>
