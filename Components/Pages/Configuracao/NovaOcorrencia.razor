@page "/configuracoes/tipos-ocorrencias/nova"

<PageTitle>Novo Tipo de Ocorrência</PageTitle>

<div class="container-fluid px-4 py-4">
    <h3 class="fw-bold mb-4">Cadastrar Tipo de Ocorrência</h3>

    <div class="card shadow-sm p-4">
        <div class="mb-3">
            <label class="form-label fw-semibold">Nome *</label>
            <input type="text" class="form-control" placeholder="Ex: Atraso" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Grau *</label>
            <select class="form-select">
                <option>Selecione...</option>
                <option>Leve</option>
                <option>Médio</option>
                <option>Grave</option>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Descrição</label>
            <textarea class="form-control" rows="3"></textarea>
        </div>

        <div class="d-flex justify-content-end mt-4 gap-2">
            <a href="/configuracoes/tipos-ocorrencias" class="btn btn-outline-secondary">Cancelar</a>
            <button class="btn btn-primary">Salvar</button>
        </div>
    </div>
</div>
