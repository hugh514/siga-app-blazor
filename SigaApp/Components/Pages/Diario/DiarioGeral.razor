@page "/diario"
<PageTitle>Diario</PageTitle>
<div class="container py-5">
    <h3 class="mb-4 fw-normal text-dark text-center">Selecionar Turma</h3>
    <!-- Barra de pesquisa -->
    <div class="input-group mb-4 mx-auto" style="max-width: 500px;">
        <input type="text" id="searchCurso" class="form-control" placeholder="Pesquisar curso...">
        <button class="btn btn-outline-secondary" type="button">🔍</button>
    </div>
    <!-- Lista de turmas -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <table class="table table-hover align-middle mb-0" id="tabelaTurmas">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Nome da Turma</th>
                        <th scope="col">Curso</th>
                        <th scope="col">Série</th>
                        <th scope="col">Ano Letivo</th>
                        <th scope="col" class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Turma A</td>
                        <td>Informática</td>
                        <td>1º Ano</td>
                        <td>2025</td>
                        <td class="text-center">
                            <a href="detalhes_turma" class="btn btn-sm btn-outline-primary">Abrir</a>
                        </td>
                    </tr>
                    <tr>
                        <td>Turma B</td>
                        <td>Administração</td>
                        <td>2º Ano</td>
                        <td>2025</td>
                        <td class="text-center">
                            <a href="detalhes_turma" class="btn btn-sm btn-outline-primary">Abrir</a>
                        </td>
                    </tr>
                    <tr>
                        <td>Turma C</td>
                        <td>Química</td>
                        <td>3º Ano</td>
                        <td>2024</td>
                        <td class="text-center">
                            <a href="detalhes_turma" class="btn btn-sm btn-outline-primary">Abrir</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>