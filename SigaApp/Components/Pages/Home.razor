@page "/"

<PageTitle>Home</PageTitle>

<style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      text-align: center;
    }


    

    .container {
      margin-top: 80px;
    }

    h2 {
      font-weight: bold;
      font-size: 24px;
    }

    p {
      color: #666;
      margin-top: 4px;
      font-size: 14px;
    }

    .btn-group {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      margin: 40px auto;
      width: 320px; 
      gap: 16px;
    }

    .botao {
      display: flex;
      align-items: center;
      background-color: #fff;
      border: 1px solid #ccc;
      border-radius: 8px;
      padding: 10px 16px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.05);
      font-size: 14px;
      cursor: pointer;
      transition: background-color 0.3s;
      width: 100%; 
      box-sizing: border-box;
    }

    .botao:hover {
      background-color: #f5f5f5;
    }

    .icone {
      background-color: #e0edff;
      color: #0d6efd;
      border-radius: 8px;
      width: 28px;
      height: 28px;
      display: flex;
      justify-content: center;
      align-items: center;
      margin-right: 10px;
      font-size: 15px;
      flex-shrink: 0;
    }
  </style>

  <div class="container">
    <h2>Bem vindo ao painel</h2>
    <p>Email da escola</p>

    <div class="btn-group">
      <div class="botao">
        <div class="icone">👤</div>
        <span>Adicionar outros admins</span>
      </div>
      <div class="botao">
        <div class="icone">🏫</div>
        <span>Adicionar classes</span>
      </div>
      <div class="botao">
        <div class="icone">👥</div>
        <span>Adicionar estudantes</span>
      </div>
    </div>
  </div>