@page "/menu_matriculas"
<PageTitle>Matriculas</PageTitle>

<div class="container py-5">
    <h3 class="mb-4 fw-normal text-dark text-center">Menu de Matrículas</h3>

    <div class="row g-4 justify-content-center">
        <!-- Card 1 -->
        <div class="col-md-4">
            <a href="cadast" class="text-decoration-none">
                <div class="card shadow-sm border-0 h-100 text-center p-4">
                    <h5 class="fw-normal text-dark">Cadastrar Matrícula</h5>
                    <p class="text-muted">Registrar um aluno em uma turma</p>
                </div>
            </a>
        </div>

        <!-- Card 2 -->
        <div class="col-md-4">
            <a href="matricular_aluno" class="text-decoration-none">
                <div class="card shadow-sm border-0 h-100 text-center p-4">
                    <h5 class="fw-normal text-dark">Listar Matrículas</h5>
                    <p class="text-muted">Visualizar todas as matrículas cadastradas</p>
                </div>
            </a>
        </div>

        <!-- Card 3 -->
        <div class="col-md-4">
            <a href="deletar_turma" class="text-decoration-none">
                <div class="card shadow-sm border-0 h-100 text-center p-4">
                    <h5 class="fw-normal text-dark">Excluir Matrícula</h5>
                    <p class="text-muted">Remover uma matrícula existente</p>
                </div>
            </a>
        </div>
    </div>
</div>
