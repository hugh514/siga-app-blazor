@page "/"

<PageTitle>Home</PageTitle>

<!-- Importa os ícones do Bootstrap -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

<div class="container d-flex flex-column justify-content-center align-items-center min-vh-100 text-center">
    <h2 class="fw-bold">Bem vindo ao painel</h2>
    <p class="text-muted">Email da escola</p>

    <div class="w-100 mt-4" style="max-width: 400px;">
        <!-- Botão 1 -->
        <button class="btn btn-light shadow-sm d-flex align-items-center p-3 w-100 rounded-3 mb-3">
            <div class="bg-primary text-white d-flex justify-content-center align-items-center rounded-3 me-3"
                 style="width: 40px; height: 40px;">
                <i class="bi bi-person-plus-fill"></i>
            </div>
            <span class="fw-semibold">Adicionar outros admins</span>
        </button>

        <!-- Botão 2 -->
        <a class="btn btn-light shadow-sm d-flex align-items-center p-3 w-100 rounded-3 mb-3" href="/turmas">
            <div class="bg-success text-white d-flex justify-content-center align-items-center rounded-3 me-3"
                 style="width: 40px; height: 40px;">
                <i class="bi bi-building"></i>
            </div>
            <span class="fw-semibold">Adicionar classes</span>
        </a>

        <!-- Botão 3 -->
        <button class="btn btn-light shadow-sm d-flex align-items-center p-3 w-100 rounded-3">
            <div class="bg-warning text-dark d-flex justify-content-center align-items-center rounded-3 me-3"
                 style="width: 40px; height: 40px;">
                <i class="bi bi-people-fill"></i>
            </div>
            <span class="fw-semibold">Adicionar estudantes</span>
        </button>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    h2 {
        font-size: 1.8rem;
    }

    .btn {
        transition: all 0.2s ease-in-out;
    }

        .btn:hover {
            background-color: #f1f3f5;
            transform: translateY(-2px);
        }
</style>
