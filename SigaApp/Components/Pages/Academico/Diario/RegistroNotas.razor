@page "/registro_notas"

<PageTitle>Notas</PageTitle>

<div class="container py-5">
    <h3 class="mb-4 fw-normal text-dark text-center">Registro de Notas</h3>
    <div class="card shadow-sm border-0 p-4 mx-auto" style="max-width: 600px;">
        <form id="form-registro-nota">
            <!-- Selecionar Aluno -->
            <div class="mb-3">
                <label for="aluno" class="form-label">Aluno</label>
                <select id="aluno" class="form-select" required>
                    <option selected disabled>Selecione o aluno</option>
                    <option>Maria Silva</option>
                    <option>João Souza</option>
                    <option>Ana Costa</option>
                    <option>Carlos Oliveira</option>
                </select>
            </div>
            <!-- Selecionar Matéria -->
            <div class="mb-3">
                <label for="materia" class="form-label">Matéria</label>
                <select id="materia" class="form-select" required>
                    <option selected disabled>Selecione a matéria</option>
                    <option>Matemática</option>
                    <option>Português</option>
                    <option>História</option>
                    <option>Geografia</option>
                    <option>Biologia</option>
                    <option>Química</option>
                    <option>Física</option>
                </select>
            </div>

            <!-- Selecionar Ano -->
            <div class="mb-3">
                <label for="ano" class="form-label">Ano</label>
                <select id="ano" class="form-select" required></select>
            </div>

            <!-- Selecionar Bimestre -->
            <div class="mb-3">
                <label for="bimestre" class="form-label">Bimestre</label>
                <select id="bimestre" class="form-select" required>
                    <option selected disabled>Selecione o bimestre</option>
                    <option value="1º">1º Bimestre</option>
                    <option value="2º">2º Bimestre</option>
                    <option value="3º">3º Bimestre</option>
                    <option value="4º">4º Bimestre</option>
                </select>
            </div>

            <!-- Nota -->
            <div class="mb-3">
                <label for="nota" class="form-label">Nota Bimestral</label>
                <input type="number" id="nota" class="form-control" min="0" max="10" step="0.1" placeholder="Digite a nota" required>
            </div>

            <!-- Botões -->
            <div class="d-flex justify-content-between">
                <a href="#diario" class="btn btn-outline-secondary">Cancelar</a>
                <button type="submit" class="btn btn-primary">Salvar Nota</button>
            </div>
        </form>
    </div>
</div>
