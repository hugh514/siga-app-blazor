@page "/professores"
<PageTitle>Professores</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">Professores</h2>
    <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary" href="/relatorios">Relatórios</a>
        <a class="btn btn-primary" href="/cadastro_professor">+ Novo professor</a>
    </div>
</div>

<!-- Filtros -->
<div class="card mb-4 shadow-sm">
    <div class="card-body">
        <form class="row g-2 align-items-center">
            <div class="col-md-4">
                <input class="form-control" placeholder="Pesquisar por nome, CPF, e-mail..." />
            </div>
            <div class="col-md-3">
                <select class="form-select">
                    <option value="">Todos os cursos</option>
                    <option>Informática</option>
                    <option>Administração</option>
                </select>
            </div>
            <div class="col-md-2">
                <select class="form-select">
                    <option value="">Todas as disciplinas</option>
                    <option>Matemática</option>
                    <option>Português</option>
                </select>
            </div>
            <div class="col-md-2">
                <select class="form-select">
                    <option value="">Status</option>
                    <option value="ativo">Ativo</option>
                    <option value="inativo">Inativo</option>
                </select>
            </div>
            <div class="col-md-1 d-grid">
                <button type="button" class="btn btn-outline-primary">Filtrar</button>
            </div>
        </form>
    </div>
</div>

<!-- Lista com cards limpos e modernos -->
<div class="row g-4">
    @* Item de professor *@
    <div class="col-md-6 col-lg-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body d-flex gap-3">
                <img src="https://i.pravatar.cc/" class="rounded-circle" alt="Foto" style="width:80px;height:80px;object-fit:cover;">
                <div class="flex-fill">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h5 class="mb-1">Jefferson</h5>
                            <small class="text-muted">Professor de Português</small>
                        </div>
                        <span class="badge bg-success">Ativo</span>
                    </div>

                    <div class="mt-2 small text-muted">
                        <div><strong>E-mail:</strong> jefferson@email.com</div>
                        <div><strong>Telefone:</strong> (69) 99999-9999</div>
                        <div><strong>CPF:</strong> 123.456.789-00</div>
                    </div>

                    <div class="mt-3 d-flex gap-2">
                        <a class="btn btn-sm btn-outline-primary" href="/editar_professor">Editar</a>
                        <a class="btn btn-sm btn-outline-danger" href="/excluir_professor">Excluir</a>
                        <a class="btn btn-sm btn-outline-secondary" href="/detalhes_professor">Ver turmas</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Paginação simples -->
<nav class="mt-4" aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item disabled"><a class="page-link">Anterior</a></li>
        <li class="page-item active"><a class="page-link">1</a></li>
        <li class="page-item"><a class="page-link">2</a></li>
        <li class="page-item"><a class="page-link">3</a></li>
        <li class="page-item"><a class="page-link">Próxima</a></li>
    </ul>
</nav>
