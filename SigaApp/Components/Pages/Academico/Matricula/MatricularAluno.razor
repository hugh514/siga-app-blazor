@page "/matricular_aluno"
<PageTitle>Matricula</PageTitle>

<div class="card shadow-sm border-0 p-4 mb-4">
        <form id="formMatricula">
            <div class="row g-3">
                <!-- Período Letivo -->
                <div class="col-md-4">
                    <label for="periodoLetivo" class="form-label">Período Letivo *</label>
                    <select id="periodoLetivo" class="form-select" required>
                        <option value="">Selecione...</option>
                        <option value="2025-1">2025/1</option>
                        <option value="2025-2">2025/2</option>
                    </select>
                </div>

                <!-- Curso -->
                <div class="col-md-4">
                    <label for="curso" class="form-label">Curso *</label>
                    <select id="curso" class="form-select" required>
                        <option value="">Selecione...</option>
                        <option value="1">Informática</option>
                        <option value="2">Administração</option>
                    </select>
                </div>

                <!-- Série -->
                <div class="col-md-4">
                    <label for="serie" class="form-label">Série *</label>
                    <select id="serie" class="form-select" required>
                        <option value="">Selecione...</option>
                        <option value="1">1ª Série</option>
                        <option value="2">2ª Série</option>
                        <option value="3">3ª Série</option>
                    </select>
                </div>

                <!-- Turma -->
                <div class="col-md-6">
                    <label for="turma" class="form-label">Turma *</label>
                    <select id="turma" class="form-select" required>
                        <option value="">Selecione...</option>
                    </select>
                </div>

                <!-- Aluno -->
                <div class="col-md-6">
                    <label for="aluno" class="form-label">Aluno *</label>
                    <select id="aluno" class="form-select" required>
                        <option value="">Selecione...</option>
                    </select>
                </div>

                <!-- Retroativa + Botão -->
                <div class="col-md-6 d-flex align-items-center">
                    <div class="form-check form-switch me-3">
                        <input class="form-check-input" type="checkbox" id="retroativa">
                        <label class="form-check-label" for="retroativa">Retroativa?</label>
                    </div>
                </div>

                <!-- Card de Vagas -->
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center">
                            <h6 class="mb-2">Vagas</h6>
                            <p class="text-muted">Nenhuma turma selecionada</p>
                            <div class="d-flex justify-content-between">
                                <small>Total: --</small>
                                <small>Ocupadas: --</small>
                                <small>Especiais: --</small>
                                <small>Disponíveis: --</small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Botão -->
                <div class="col-12 text-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Matricular
                    </button>
                </div>
            </div>
        </form>
    </div>
    <div class="card shadow-sm border-0 mt-4">
        <div class="card-body">
            <h5 class="mb-3">Matrículas Cadastradas</h5>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Aluno</th>
                            <th>Turma</th>
                            <th>Ano</th>
                            <th>Série</th>
                            <th>Turno</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                    
                    </tbody>
                </table>
            </div>
        </div>
    </div>


