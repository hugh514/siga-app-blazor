@inherits LayoutComponentBase

<div class="d-flex" style="height:100vh;">
    <!-- Sidebar -->
    <nav id="sidebar" class="sidebar d-flex flex-column p-3">
        <!-- Logo -->
        <div class="text-center mb-3">
            <img src="/assets/logo.png" alt="logo"
                 style="filter: brightness(0) invert(1); height: 13vh;" />
        </div>
        <p class="text-white fw-semibold text-center">Bem Vindo!</p>
        <hr class="border-secondary" />

        <!-- Menu -->
        <ul class="nav nav-pills flex-column gap-1">
            <li>
                <NavLink class="nav-link d-flex align-items-center" href="/" Match="NavLinkMatch.All">
                    <i class="bi bi-house me-2"></i> <span>Painel</span>
                </NavLink>
            </li>
            <li>
                <NavLink class="nav-link d-flex align-items-center" href="/diario">
                    <i class="bi bi-journal-text me-2"></i> <span>Diários</span>
                </NavLink>
            </li>
            <li>
                <NavLink class="nav-link d-flex align-items-center" href="/professores">
                    <i class="bi bi-person-badge me-2"></i> <span>Professores</span>
                </NavLink>
            </li>
            <li>
                <NavLink class="nav-link d-flex align-items-center" href="/estudantes">
                    <i class="bi bi-people me-2"></i> <span>Estudantes/ classes</span>
                </NavLink>
            </li>
            <li>
                <NavLink class="nav-link d-flex align-items-center" href="/turmas">
                    <i class="bi bi-building me-2"></i> <span>Turmas</span>
                </NavLink>
            </li>
            <li>
                <NavLink class="nav-link d-flex align-items-center" href="/matriculas">
                    <i class="bi bi-card-list me-2"></i> <span>Matrículas</span>
                </NavLink>
            </li>
            <li>
                <NavLink class="nav-link d-flex align-items-center" href="/calendario">
                    <i class="bi bi-calendar-event me-2"></i> <span>Calendário acadêmico</span>
                </NavLink>
            </li>
            <li>
                <NavLink class="nav-link d-flex align-items-center" href="/diario">
                    <i class="bi bi-journal me-2"></i> <span>Diário</span>
                </NavLink>
            </li>
        </ul>

        <div class="mt-auto">
            <hr class="border-secondary" />
            <NavLink class="nav-link d-flex align-items-center" href="/configuracoes">
                <i class="bi bi-gear me-2"></i> <span>Configurações e perfil</span>
            </NavLink>
        </div>
    </nav>

    <!-- Conteúdo -->
    <main class="flex-fill p-4 bg-light">
        @Body
    </main>
</div>

<style>
    /* 🔹 Sidebar */
    #sidebar {
        width: 30vw;
        background-color: #152259; /* cor escura */
        color: #fff;
    }

        /* 🔹 Itens de menu */
        #sidebar .nav-link {
            color: #ffffff;
            border-radius: 0.4rem;
            padding: 0.6rem 0.8rem;
            font-weight: 500;
            white-space: nowrap; /* não quebrar linha */
        }

            /* 🔹 Hover */
            #sidebar .nav-link:hover {
                background-color: #2a2e38;
                color: #fff;
            }

            /* 🔹 Ativo */
            #sidebar .nav-link.active {
                background-color: #0d6efd !important;
                color: #fff !important;
            }
</style>
